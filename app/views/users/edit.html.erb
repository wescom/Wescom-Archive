<div id="users-page">
	<%= render(:partial => "home/pagenav") %>
	<div id="page-content" class="clearfix">
		<%= form_for @user, :url => user_path do |form| %>
			<h1>
				<%= @user.first_name %> <%= @user.last_name %>
			</h1>
	
			<div class="inner-box clearfix">
			  <div id="form-block" class="grid_15">
					Username: <%= @user.login %><br/>
					Full Name: <%= @user.name %><br/>
					Created At: <%= @user.created_at.strftime('%m/%d/%Y %I:%M%p') %><br/>
					Updated At: <%= @user.updated_at.strftime('%m/%d/%Y %I:%M%p') %><br/>
					Role: <%= form.select :role, ['View', 'Edit', 'Admin'], {}, :class=>'medium' %>
		
					<%= form.submit "Update", :class => 'submit small'%>
					<%= form.submit "Cancel", :name => 'cancel_button', :class => 'submit small'%>
				</div>
			</div>
		<% end %>
	</div>
</div>
