<h1>Login</h1>

<!-- <%= default_adauth_form %> -->

<div id="login-page">
	<div id="page-content" class="clearfix">
		<div class="inner-box clearfix">
			<h1>Login <span>(Using your Spark or Computer username/password)</span></h1>
		  <div id="login-content" class="grid_6 clearfix">
				<%= adauth_form do %>
					<div class="indent">
						<br/><br/>
						<p>Username:
						<%= text_field_tag :username, nil, :class => 'biggest' %></p>
						<p>Password:
						<%= password_field_tag :password, nil, :class => 'biggest' %></p>
						<%= submit_tag "Login", :class => 'submit small' %>
					</div>
				<% end %>
			</div>
			<div class="8">
				<!--<img src = "/images/Newspapers_1.jpg" alt = "Newspapers" />-->
				<% if @pdfs.present? %>
					<% @pdfs.each do |pdf| %>
						<div class="float_left">
							<div class="center">
								<%= image_tag(pdf.image(:large), :alt=>"PagePDF", :class=>"image_medium") %>
							</div>
						</div>
					<% end %>
				<% end %>
			<div>
		</div>
	</div>
</div>
