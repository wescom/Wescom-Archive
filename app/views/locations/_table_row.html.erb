<tr>
	<td></td>
	<td><%= table_row.name %></td>	
	<td></td>
	<td>
		<% if table_row.created_at? %>
			<%= table_row.created_at.strftime('%m/%d/%Y') %> at <%= table_row.created_at.strftime('%I:%M%p') %>
		<% end %>
	</td>
	<td>
		<% if table_row.updated_at? %>
			<%= table_row.updated_at.strftime('%m/%d/%Y') %> at <%= table_row.updated_at.strftime('%I:%M%p') %>
		<% end %>
	</td>
	<td class="center"><%= link_to "Edit", edit_location_path(table_row) %>

	<% table_row.publications.each do |pub| %>
		<tr>
			<td></td>
			<td></td>
			<td><%= pub.name %></td>	
			<td></td>
			<td></td>
			<td class="center"><%= link_to "Edit", edit_publication_path(pub) %>
		</tr>
	<% end %>
</tr>
