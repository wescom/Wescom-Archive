<% content_for :title do %>
  <%= "#{h @pdf_image.image_file_name} - " if @pdf_image.image_file_name -%>
<% end %>

<div id="image-content" class="grid_16">
	<div class="image-header-bar ">
		<% if !@pdf_image.image_file_name.nil? %><%= @pdf_image.image_file_name %><% end %>
	</div>

	<%= link_to image_tag(@pdf_image.image(:large), :alt=>"PagePDF", :class=>"image_large"), @pdf_image.image.url %>
	
	<div id="image_edit" class="grid_16">
		<% if admin? || edit? %>
			<%= button_to "Delete Image", pdf_image_path(@pdf_image), 
					:method => :delete, 
					:confirm => "Are you sure you want to delete image from story?",
					:action => 'destroy',
					:class => 'image-delete float_right' %>
		<% end %>
	</div>
</div>
